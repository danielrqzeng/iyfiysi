}

func main() {
	flag.Parse()

	if *versionFlag {
		fmt.Printf("Version %v, commit %v, built at %v\n", version, commit, date)
		os.Exit(0)
	}

	initAll()

	etcdServers := viper.GetStringSlice("etcd.etcdServer")
	instance := viper.GetString("gateway.listen")
	jeagerServers := viper.GetStringSlice("jaeger.jaegerServer")

	gwmux := runtime.NewServeMux()
	discovery.Discovery(gwmux,etcdServers,jeagerServers[0])
	//mux := gwmux
	mux := http.NewServeMux()
	mux.Handle("/", gwmux)

	// Start HTTP server (and proxy calls to gRPC server endpoint)
	http.ListenAndServe(instance, mux)
	return
